files:
  # 外部設定ファイルをアプリケーション実行ディレクトリにコピー
  "/opt/elasticbeanstalk/deployment/app/config/table-config.json":
    mode: "000644"
    owner: root
    group: root
    source: config/table-config.json
    
  "/opt/elasticbeanstalk/deployment/app/config/validation-config.json":
    mode: "000644"
    owner: root
    group: root
    source: config/validation-config.json
    
  "/opt/elasticbeanstalk/deployment/app/config/ui-config.json":
    mode: "000644"
    owner: root
    group: root
    source: config/ui-config.json
    
  "/opt/elasticbeanstalk/deployment/app/config/messages.properties":
    mode: "000644"
    owner: root
    group: root
    source: config/messages.properties
    
  "/opt/elasticbeanstalk/deployment/app/config/messages_ja.properties":
    mode: "000644"
    owner: root
    group: root
    source: config/messages_ja.properties
    
  "/opt/elasticbeanstalk/deployment/app/config/messages_en.properties":
    mode: "000644"
    owner: root
    group: root
    source: config/messages_en.properties

commands:
  01_create_config_directory:
    command: "mkdir -p /opt/elasticbeanstalk/deployment/app/config"
    ignoreErrors: true
    
  02_set_permissions:
    command: "chmod 755 /opt/elasticbeanstalk/deployment/app/config"
    ignoreErrors: true